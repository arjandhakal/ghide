{
  "manifest_version": 3,
  "name": "GHide",
  "version": "1.0.0",
  "description": "Organize your Google Gemini chats with nested folders. Drag & drop, rename, and keep your workspace clean.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"]
}
